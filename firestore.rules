rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Quiz management - only authenticated admin users
    match /quizzes/{quizId} {
      allow read, write: if request.auth != null;
    }
    
    // Quiz sessions - read access for participants, write for admin
    match /sessions/{sessionId} {
      allow read: if true; // Allow anonymous participants to read session
      allow write: if request.auth != null; // Only admin can modify session
      
      // Participant responses within a session
      match /responses/{responseId} {
        allow read, write: if true; // Allow anonymous participants to submit responses
      }
    }
    
    // Real-time participant tracking
    match /participants/{participantId} {
      allow read, write: if true; // Allow anonymous participants to join/update status
    }
  }
}